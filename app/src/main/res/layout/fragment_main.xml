<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/mainPage"
    android:background="@android:color/holo_green_light"
    tools:context=".MainActivityFragment">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewBugKey" />

    <TextView android:text="Welcome to android Hackthon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewBugValue"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textviewBugKey"
        android:layout_marginLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagebuttonImDeveloper"
        android:background="@drawable/developer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<!-- cc3.0 by people http://scribblenauts.wikia.com/wiki/Game_Developer-->
    <ImageButton
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/imageViewBugs"
        android:background="@drawable/bug_alive"
        android:layout_alignBottom="@+id/imagebuttonImDeveloper"
        android:layout_toRightOf="@+id/imagebuttonImDeveloper"
        android:layout_toEndOf="@+id/imagebuttonImDeveloper" />


    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info"
        android:layout_below="@+id/tvX"
        android:layout_toRightOf="@+id/tvX"
        android:layout_toEndOf="@+id/tvX"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvX"
        android:layout_below="@+id/tvY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvY"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvZ"
        android:layout_below="@+id/tvX"
        android:layout_alignLeft="@+id/imageViewBugs"
        android:layout_alignStart="@+id/imageViewBugs"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ymow kill bugs"
        android:id="@+id/textviewKillbugsScores"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/imagebuttonImDeveloper"
        android:layout_margin="8dp" />


</RelativeLayout>
